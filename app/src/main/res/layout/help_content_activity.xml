<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <include layout="@layout/help_content_item"/>
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/iv_content_top"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/tv_content_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="20dp"
                    android:id="@+id/initiator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="山东公益"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="发起并执行"
                    android:id="@+id/textView4" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:paddingLeft="50dp"
                    android:paddingRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp" />
                <TextView
                android:paddingLeft="50dp"
                android:paddingRight="10dp"
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:background="@color/white"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" />
                <TextView
                    android:paddingLeft="50dp"
                    android:paddingRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp" />
                <TextView
                    android:paddingLeft="50dp"
                    android:paddingRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp" />
                <TextView
                    android:paddingLeft="50dp"
                    android:paddingRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp" />
                <TextView
                    android:paddingLeft="50dp"
                    android:paddingRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp" />
                <TextView
                    android:paddingLeft="50dp"
                    android:paddingRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/tv_content_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.5"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:text="也许有的人天生就很富有，但是没有人注定要贫穷。一个大多数不肯承认的事实是，贫穷的本质是认知的落后，而对财富认知的落后是其中一大因素为此，星公益希望征集20名乡村教师志愿者，为孩子们带来一节财商课，让争取的财富观在贫困的家庭的孩子心中发芽成长！"
                    android:textScaleX="1.2"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_reading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:text="阅读全文"
                    android:textColor="@color/normal_orange_color"
                    android:textSize="20sp" />
            </LinearLayout>

            <RelativeLayout
                android:paddingTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_publictitle"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="20dp"
                    android:text="发起方详情 >"
                    android:textColor="@color/normal_orange_color" />

                <TextView
                    android:id="@+id/tv_publictitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_content_public"
                    android:layout_alignStart="@+id/tv_content_public"
                    android:layout_below="@+id/tv_content_public"
                    android:paddingTop="15dp"
                    android:text="山东省星公益基金会" />

                <TextView

                    android:id="@+id/tv_content_public"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/public_logo"
                    android:layout_centerHorizontal="true"
                    android:text="山东省星公益基金会" />

                <ImageView
                    android:id="@+id/public_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="15dp"
                    android:src="@mipmap/good_video" />

            </RelativeLayout>

            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="筹集用途"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_help"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="文具"
                            android:textSize="30sp" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>





            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="项目进度"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

                <com.goldenratio.commonweal.ui.view.Help_ProgressBar
                    android:id="@+id/pb_progressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_content"
                    android:layout_marginTop="16dp"
                    android:max="100" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="36"
                            android:textSize="26sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="参与者" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7000k"
                            android:textSize="26sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="目标任务" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textSize="26sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="剩余天数" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:text="筹集后，科技文化交流协会背景将会于2016年7月执行本项目" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="听听他们怎么说"
                    android:textSize="20sp" />

                <ListView
                    android:id="@+id/lv_help_contnet_official_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>
            </LinearLayout>


            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="讨论" />

                <ListView
                    android:id="@+id/lv_help_discuss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>