<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    app:cardCornerRadius="@dimen/normal_space"
                                    app:cardElevation="@dimen/little_space">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_star_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/iv_unregister_head"/>

            <ImageView
                android:id="@+id/iv_star_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/civ_star_avatar"
                android:layout_alignRight="@+id/civ_star_avatar"
                android:src="@mipmap/v_yellow"
                android:visibility="gone"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_star_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:padding="@dimen/little_space"
            android:text="龙啸天"
            android:textColor="@color/black"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_space"
            android:background="@drawable/default_frame"
            android:gravity="center">


            <TextView
                android:id="@+id/tv_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/fragment_good_add"
                android:gravity="center"
                android:padding="@dimen/little_space"
                android:text="关注"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_default"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>


