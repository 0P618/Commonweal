<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/reg_bg"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="150dp"
        android:text="注册"
        android:textColor="@color/bac_kuang"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"


            android:layout_marginTop="20dp"
            android:background="@color/bac_kuang"
            android:drawableLeft="@mipmap/user_name"
            android:ems="10"
            android:hint="请输入用户名"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingRight="30dp" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:layout_marginLeft="50dp"
            android:background="@color/title_words" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"


            android:background="@color/bac_kuang"
            android:drawableLeft="@mipmap/user_name"
            android:ems="10"
            android:hint="请输入手机号"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingRight="30dp" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:layout_marginLeft="50dp"
            android:background="@color/title_words" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp">

            <EditText
                android:id="@+id/et_yzm"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@color/bac_kuang"
                android:drawableLeft="@mipmap/msg"
                android:ems="10"
                android:hint="请输入验证码"
                android:paddingLeft="10dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/et_yzm"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/et_yzm"
                android:background="@color/main_hue"
                android:text="验证码" />

        </RelativeLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:layout_marginLeft="50dp"
            android:background="@color/title_words" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"


            android:background="@color/bac_kuang"
            android:drawableLeft="@mipmap/user_name"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingRight="30dp" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:layout_marginLeft="50dp"
            android:background="@color/title_words" />

        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/main_hue"
            android:text="立即注册"

            />


    </LinearLayout>


</LinearLayout>
