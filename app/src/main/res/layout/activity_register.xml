<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/my_register_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/normal_space"
            android:src="@mipmap/ic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:padding="@dimen/normal_space"
            android:text="注册"
            android:textSize="@dimen/title_text_size" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/normal_orange_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_space"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_space"
            android:gravity="center" >

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:drawableLeft="@mipmap/login_ic_phone"
                android:drawablePadding="@dimen/normal_space"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:layout_toLeftOf="@+id/btn_yzm"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_yzm"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/et_phone"
                android:text="验证码"
     />


        </RelativeLayout>

        <EditText
            android:id="@+id/my_register_get_check_upass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/normal_space"
            android:drawableLeft="@mipmap/login_ic_check_pass"
            android:drawablePadding="@dimen/normal_space"
            android:hint="请输入验证码" />

        <EditText
            android:id="@+id/my_register_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/normal_space"
            android:layout_marginLeft="@dimen/normal_space"
            android:drawableLeft="@mipmap/login_ic_password"
            android:drawablePadding="@dimen/normal_space"
            android:hint="请输入密码" />
    </LinearLayout>

    <Button
        android:id="@+id/my_register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_space"
        android:background="@drawable/register_btn_selector"
        android:padding="@dimen/normal_space"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:checked="true"
        android:text="我已看过并同意扔吧(用户使用协议)" />



</LinearLayout>
